---
import { Icon } from "astro-icon/components";

const links = [
  {
    url: "https://www.facebook.com/teknikfokus",
    description: "Teknikfokus Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.linkedin.com/company/teknikfokus/",
    description: "Teknikfokus LinkedIn",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://www.instagram.com/teknikfokus/",
    description: "Teknikfokus Instagram",
    icon: "fa-brands:instagram",
  },
];
---

<footer
  class="relative flex flex-col items-center justify-center bg-offset p-10 mt-auto"
>
  <div class="flex flex-wrap justify-center gap-4 gap-x-20">
    <div>
      <h1 class="font-bold">Project managers</h1>
      <div>
        <p class="text-sm">Arvid Nygren</p>
        <a
          href="mailto:arvid@teknikfokus.se"
          class="font-light text-offset text-xs"
        >
          arvid@teknikfokus.se
        </a>
      </div>
      <div>
        <p class="text-sm">Christiana Onufriciuc</p>
        <a
          href="mailto:christiana@teknikfokus.se"
          class="font-light text-offset text-xs"
        >
          christiana@teknikfokus.se
        </a>
      </div>
    </div>

    <div>
      <h1 class="font-bold">Webpage maintainers</h1>
      <div>
        <p class="text-sm">Isak Kallini</p>
        <a
          href="mailto:isak@teknikfokus.se"
          class="font-light text-offset text-xs"
        >
          isak@teknikfokus.se
        </a>
      </div>
      <div>
        <p class="text-sm">Theodor Fransson</p>
        <a
          href="mailto:theodor@teknikfokus.se"
          class="font-light text-offset text-xs"
        >
          theodor@teknikfokus.se
        </a>
      </div>
    </div>
  </div>

  <ul class="mt-4 flex gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4 hover:border-primary hover:text-primary"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>

---
interface Props {
  title?: string;
  time?: string;
  description?: string;
}
const { title, time, description } = Astro.props;
---

<div
  class="relative mb-4 flex-1 rounded-3xl border-b-4 border-blue-200 bg-white shadow dark:border-gray-800 dark:bg-gray-900"
>
  <div class="relative z-20 p-6">
    <p
      class="float-right ml-4 font-light text-gray-600 text-xs dark:text-gray-400"
    >
      {time}
    </p>

    <p class="mb-2 font-bold text-gray-800 text-xl dark:text-gray-100">
      {title}
    </p>

    <p class="text-gray-700 dark:text-gray-500">{description}</p>
  </div>
</div>
